%h1 New Report
= simple_form_for @report, :html => { :class => "form-horizontal" } do |f|
  .form-group
    = f.label :start_date, { class: "col-sm-2" }
    .col-sm-10
      = f.text_field :start_date, { class: 'datepicker form-control' }
      = f.error :start_date
  .form-group
    = f.label :end_date, { class: "col-sm-2" }
    .col-sm-10
      = f.text_field :end_date, { class: 'datepicker form-control' }
      = f.error :end_date
  .form-group
    = f.label :current, { class: "col-sm-2" }
    .col-sm-10
      = f.input_field :current
      = f.error :current
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.error :overlapping
      = f.submit "Create Report", class: "btn btn-primary"

