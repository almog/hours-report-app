.row
  %table.table#reports
    %tr
      %th From
      %th To
      %th Status
      %th Links
    - @reports.each do |report|
      %tr{ :class => ("warning" if report.current?) }
        %td= report.start_date.strftime('%B %d, %Y')
        %td= report.end_date.strftime('%B %d, %Y')
        %td= report.status
        %td
          = link_to "Details", report
          = link_to "Delete", report, method: :delete, confirm: "Are you sure?" unless report.current?
