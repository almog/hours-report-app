#main-header.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to(image_tag("logo.png", :alt => "home image", :width => 150, :height => 70, :title => "Click here to return to Home"), "/")
    - if current_user
      .navbar-collapse.collapse{style: "height: 1px;"}
        %ul.nav.navbar-nav.navbar-left
          = render 'shared/user_links'

          - if current_user.admin?
            = render 'shared/admin_links'

        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to "Sign Out", logout_path
          %li
            = link_to current_user, :class => '', :title => "#{current_user.name}" do
              = image_tag current_user.image || "http://lorempixel.com/100/100/cats/", :size => "50x50", :class => "img-rounded"
