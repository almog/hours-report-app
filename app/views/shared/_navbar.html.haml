#main-header.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "/"} Hours Report
    - if current_user
      .navbar-collapse.collapse{style: "height: 1px;"}
        %ul.nav.navbar-nav.navbar-left
          - if current_user.current_timesheet
            %li
              = link_to "Your current timesheet", [:edit, current_user, current_user.current_timesheet]
          - if current_user.admin?
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                Users
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to "Invite a new user", new_invitation_path
                %li
                  = link_to "All Users", users_path
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                Reports
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to "New Report", new_report_path
                %li
                  = link_to "All Reports", reports_path
                %li
                  = link_to "Current Report", Report.current_report if Report.current_report
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to "Sign Out", logout_path
